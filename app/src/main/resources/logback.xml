<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
<!--        <withJansi>true</withJansi>-->
        <encoder>
            <pattern>
                %blue([%d{HH:mm:ss}]) %green([%thread/%logger{36}]) %highlight([%level]) %highlight(%msg) %n
            </pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>